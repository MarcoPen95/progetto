<div class="row mb-5">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <h3 class="text-center">Account Log-in</h3>
      
      <form action="/auth/login" method="post">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button  id="reset" type="reset" class="btn btn-danger">Reset</button>
      </form>
    </div>
  </div>
</div>

<div class="row mb-2">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <a class="btn btn-primary" href="/auth/dropbox"><i class="fa fa-dropbox left"></i> Log-in with Dropbox</a>
    </div>
  </div>
</div>

<div class="row mb-2">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <a class="btn btn-danger" href="/auth/google"><i class="fa fa-google left"></i> Log-in with Google</a>
    </div>
  </div>
</div>
