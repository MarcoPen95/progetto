<h4>Eventi a cui partecipi</h4>
<hr>
<!--mostro eventi a cui partecipo -->
{{#each eventsjoined}}
  <div class="card card-body mb-2">
    <h4 align="center">{{titolo}}</h4>
    <p><b>Data:</b> {{formatDate date 'MMMM Do YYYY'}}</p>
    <p><b>Ora:</b> {{formatDate date 'HH:mm'}}</p>
    <p><b>descrizione:</b>  {{descrizione}}</p>
    <hr/>
    <a href="/eventi/show/{{id}}" class="btn btn-dark btn-block mb-2">Read more details</a>

    <form action="/eventi/delete/{{id}}?_method=PUT" method="post">
      <input type="hidden" name="_method" value="PUT">
      <button type="submit" class="btn btn-dark btn-block mb-2" value="PUT">
        Abbandona evento
      </button>
    </form>
  </div>
{{else}}
  <p>nessun evento trovato</p>
{{/each}}



